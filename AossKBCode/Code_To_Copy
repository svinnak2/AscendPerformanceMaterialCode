import streamlit as st

# Define a container with vertical scroll bar using st.beta_container (or st.container in newer versions)
with st.container():
    st.markdown("""
        <div style="height: 300px; overflow-y: scroll; border: 1px solid #ccc; padding: 10px;">
            <p>This is content inside a scrollable container.</p>
            <p>Add as much content here as needed.</p>
            <p>Another line of content to demonstrate scrolling.</p>
            <p>Keep adding content to see the scroll bar.</p>
        </div>
    """, unsafe_allow_html=True)
