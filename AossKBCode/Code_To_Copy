import streamlit as st

import boto3



def upload_to_s3(file, bucket_name, object_key):

    s3_client = boto3.client('s3')

    s3_client.upload_fileobj(file, bucket_name, object_key)



def main():

    uploaded_file = st.file_uploader("Choose a file", type=["csv", "xlsx", "pdf"])

    if uploaded_file is not None:

        file_name = uploaded_file.name

        

        # Replace with your actual bucket name and desired object key

        bucket_name = "your-s3-bucket"

        object_key = "your-file-path/" + file_name 



        upload_to_s3(uploaded_file, bucket_name, object_key)

        st.success("File uploaded successfully!") 



if __name__ == "__main__": 

    main() 
