import os
import re

def replace_filename_part(filename, new_name):
    # Use regex to replace the part before .mp3
    new_filename = re.sub(r'^.*(?=\.mp3)', new_name, filename)
    return new_filename

# Examples
file1 = "ABC.mp3"
file2 = "mynameiskhan.mp3"

print(replace_filename_part(file1, "XYZ"))      # Output: XYZ.mp3
print(replace_filename_part(file2, "007"))      # Output: 007.mp3
