# Loop through each <p> tag and remove any <a href> or <a name> tags
for p in p_tags:
    # Find and decompose (remove) all <a href> and <a name> tags inside the <p> tag
    for a_tag in p.find_all('a', href=True):  # Removes <a href> tags
        a_tag.decompose()
    for a_tag in p.find_all('a', attrs={"name": True}):  # Removes <a name> tags
        a_tag.decompose()
