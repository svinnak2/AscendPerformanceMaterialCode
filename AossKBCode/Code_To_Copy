import networkx as nx
import matplotlib.pyplot as plt
from networkx.drawing.nx_agraph import graphviz_layout  # or use nx_pydot for pydot backend

# Sample relationship data
relationships = [
    ("Alice", "knows", "Bob"),
    ("Bob", "works at", "Google"),
    ("Alice", "studied at", "MIT"),
    ("Google", "acquired", "DeepMind")
]

# Create directed graph
G = nx.DiGraph()

# Add edges with labels
for source, relation, target in relationships:
    G.add_edge(source, target, label=relation)

# Use Graphviz layout with left-to-right flow
pos = graphviz_layout(G, prog="dot", args="-Grankdir=LR")

# Draw the graph
plt.figure(figsize=(10, 6))
nx.draw(G, pos, with_labels=True, node_color="lightblue", edge_color="gray", node_size=2000, font_size=10)

# Draw edge labels
edge_labels = {(u, v): d['label'] for u, v, d in G.edges(data=True)}
nx.draw_networkx_edge_labels(G, pos, edge_labels=edge_labels, font_color="red")

plt.title("Left-to-Right Network Graph")
plt.axis("off")
plt.show()
