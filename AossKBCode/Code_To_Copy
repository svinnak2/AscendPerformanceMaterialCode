import networkx as nx
import matplotlib.pyplot as plt

# Create a new directed graph
G = nx.DiGraph()

# Add nodes for each year with attributes
years = {'2018': 'red', '2020': 'blue', '2021': 'green'}
for year, color in years.items():
    G.add_node(year, color=color)

# Add topics and edges for each year
topics_2018 = ['Capital', 'Management', 'Governance', 'Funding']
topics_2020 = ['Projects completion', 'Plan Governance', 'Operations']
topics_2021 = ['Material', 'Strategy', 'Lines of Business', 'Principal Officers']

# Add nodes and edges with year-based colors
for topic in topics_2018:
    G.add_node(topic, color='red')
    G.add_edge('2018', topic)

for topic in topics_2020:
    G.add_node(topic, color='blue')
    G.add_edge('2020', topic)

for topic in topics_2021:
    G.add_node(topic, color='green')
    G.add_edge('2021', topic)

# Extract node colors
node_colors = [data['color'] for _, data in G.nodes(data=True)]

# Draw the graph
plt.figure(figsize=(12, 8))
pos = nx.spring_layout(G, seed=42)  # For consistent layout
nx.draw(G, pos, with_labels=True, node_color=node_colors, node_size=3000, font_size=10, font_weight='bold', edge_color='gray')
plt.title('Yearly Topics with Color-Coded Nodes and Relations', fontsize=14)
plt.show()
