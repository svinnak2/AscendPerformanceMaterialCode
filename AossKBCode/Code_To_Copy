# ✅ Print and save as Python-style list of tuples
if unique_pairs:
    with open(output_file_path, "w", encoding="utf-8") as output_file:
        output_file.write("relationships = [\n")
        for from_instance, to_instance_type in unique_pairs:
            line = f'    ("{from_instance}", "connected to", "{to_instance_type}"),'
            print(line)
            output_file.write(line + "\n")
        output_file.write("]\n")

    print(f"\n✅ Relationship tuples saved to: {output_file_path}")
else:
    print("⚠️ No matching connectors found.")
