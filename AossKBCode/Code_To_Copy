import os
import xml.etree.ElementTree as ET

# âœ… Define the parent directory containing subfolders
parent_directory = "/home/ec2"  # Adjust the path as needed

# âœ… Iterate through each folder inside the parent directory
for folder in os.listdir(parent_directory):
    folder_path = os.path.join(parent_directory, folder)

    # âœ… Check if it's a directory (skip files)
    if os.path.isdir(folder_path):
        print(f"ğŸ“‚ Entering folder: {folder}")

        # âœ… List all XML files in the folder
        xml_files = [f for f in os.listdir(folder_path) if f.endswith(".xml")]

        # âœ… Process each XML file in the folder
        for xml_file in xml_files:
            file_path = os.path.join(folder_path, xml_file)

            try:
                # âœ… Parse the XML file
                tree = ET.parse(file_path)
                root = tree.getroot()

                print(f"âœ… Processing file: {xml_file} in {folder}")
                print(f"Root tag: {root.tag}")

                # âœ… Add further XML processing logic here

            except Exception as e:
                print(f"âŒ Error processing {xml_file} in {folder}: {e}")
