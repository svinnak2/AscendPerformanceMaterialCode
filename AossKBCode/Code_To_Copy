pip install spacy
python -m spacy download en_core_web_sm


from pypdf import PdfReader
import spacy

# Load spaCy's English model
nlp = spacy.load("en_core_web_sm")

# Function to extract text and count tokens
def count_tokens_in_pdf(file_path):
    # Open the PDF file
    reader = PdfReader(file_path)
    text = ""

    # Extract text from each page
    for page in reader.pages:
        text += page.extract_text() or ""  # Handle cases where extract_text() might return None

    # Tokenize the extracted text and count tokens
    doc = nlp(text)
    num_tokens = len(doc)

    return num_tokens

# Example usage
file_path = "sample.pdf"  # Replace with your PDF file path
num_tokens = count_tokens_in_pdf(file_path)
print(f"Number of tokens in the PDF: {num_tokens}")
